<div class="container">


  <h1>BURGER BITES!!</h1>
<div class="row">

<div class="col-md-8">
  <h2 id="title">Burgers left (..OR HAS NO BITES)!</h2>
  <ul> 
    {{#each burger}}
      {{#unless devoured}}
        {{> burgers/burgers-block eaten=true}}
      {{/unless}}
    {{/each}}
  </ul>



  <h2 id="title">#CHOMP!! Burgers that are devoured!</h2>

  <ul>  
    {{#each burger}}
      {{#if devoured}}
        {{> burgers/burgers-block eaten=false}}
      {{/if}}
    {{/each}}
  </ul>
</div>


<div clas="col-md-4">
 <h2>Add a burger</h2>
  <img src="/assets/img/burger.gif" id="burgerImg"  id="cute_burger">

  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="devoured">Devoured?</label><br>
      <!-- <input type="radio" name="devoured" value="1" checked> devoured!<br> -->
      <input type="radio" name="devoured" value="0"> Not eaten
    </div> 
    <button type="submit">Add burger</button>


    
  </form>

</div>

  </div>


</div>